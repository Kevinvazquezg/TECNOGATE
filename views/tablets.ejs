    <link rel="stylesheet" href="/CSS/styles.css">
    <title>TECNOGATE</title>
</head>
<body>

    <div class="sticky-top" id="navbar">

    </div>
    <div class="container prod" id="laptops">
        <% for (var i = 0; i < data[0].length; i++) { %>
           
            <div class="card" style="width: 18rem; margin-top: 20px;">
                <form class="card-body" action="/cart" method="POST">
                <img src='<%= data[0][i].image %>'' class="card-img-top img_product item-image" alt="...">
                    <input type="hidden" value="<%= data[0][i].id %>" name="id">
                    <input type="hidden" value="1" name="cantidad">
                    <input type= text class="card-title limitado item-title" id="p" name="title" value="<%= data[0][i].name %>" readonly></input>
                    <input class="card-text item-price" name="price" value="<%= data[0][i].price %> " style="border:0" readonly ><p>MXN</p>
                </input>
                    <button type="submit" class="item-button btn btn-primary addToCart">AÃ‘ADIR AL CARRITO</button>
                </form>
            </div>
      <%   } %>
    </div>

    <script src="JS/navbar.js"></script>
    <script src="JS/laptops.js"></script>
    <script src="JS/laptop_cart.js"></script>
</body>
</html>