<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container mt-5 pt-5">
        <%- include('./partial') %>
    </div>
    <div class="container mt-5">
      <button type="button" class="btn bg-primary" ><a href="/newProduct" class="link-light">Nuevo Producto</a></button>
    </div>
    <div class="container mt-5">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Descripci√≥n</th>  
              <th scope="col">Imagen</th>  
              <th scope="col">ID_Categoria</th>  
              <th scope="col">Stock</th>  
            </tr>
          </thead>
          <% for(var i=0; i< data[0].length; i++) { %>
            <tr>
              
                <th scope="row">
                <label for=""> <%= data[0][i].id %> </label>
                </th>
                <td><label for=""> <%= data[0][i].name %> </label> </td>
                <td><label for=""> <%= data[0][i].price %> </label></td>
                <td><label for=""> <%= data[0][i].description %> </label></td>
                <td><label for=""> <%= data[0][i].image %> </label></td>
                <td><label for=""> <%= data[0][i].id_category %> </label></td>
                <td><label for=""> <%= data[0][i].stock %> </label></td>
                <td> <button type="button" class="btn bg-primary" ><a class="link-light" href="/updateProduct/<%= data[0][i].id %>">Editar</a></button></td>
                <td><button type="button" class="btn bg-primary" ><a href="/deleteProduct/<%= data[0][i].id %>" class="link-light">Eliminar</a></button></td>
            </tr>
            <% } %>
          </tbody>
        </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>